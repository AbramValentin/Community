@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <img src="~/Images/defaultUser.jpg" alt="gus" style="border-radius:50%;width:50px;margin:0;padding:0;" />
            </a>
            <ul class="dropdown-menu">
                <li><a asp-controller="MeetingInfo" asp-action="MeetingsOwn">My events</a></li>
                <li><a asp-controller="MeetingInfo" asp-action="MeetingsSubscribed">Subscribed events</a></li>
                <li role="separator" class="divider"></li>
                <li><a asp-controller="Account" asp-action="LogOut">Logout</a></li>
            </ul>
        </li>
    }
    else
    {
        <li><a asp-controller="Account" asp-action="LogIn">Login</a></li>
    }
