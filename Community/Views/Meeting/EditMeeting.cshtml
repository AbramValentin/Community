@model Community.ModelViews.MeetingViewModels.MeetingEditViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMeeting" 
              
              asp-route-meetingId="@Model.Id"
              asp-route-currentPhotoPath="@Model.currentPhotoPath"

              method="post" enctype="multipart/form-data">
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingDate" class="control-label"></label>
                <input asp-for="MeetingDate" type="date" />
                <span asp-validation-for="MeetingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <img src="@Model.currentPhotoPath" alt="event photo"/>
            </div>
            <div class="form-group">
                <input asp-for="PhotoSource" type="file" id="image-file" />
                <span asp-validation-for="PhotoSource" class="text-danger"></span>
            </div>

            @*<div>
                @await Html.PartialAsync("_LocationSearchPartial")
                <label asp-for="CityId" class="control-label"></label>
                <input asp-for="CityId" type="search" value="" name="searchTerm" data-otf-autocomplete="@Url.Action("Autocomplete","Location")">
                <span asp-validation-for="CityId" class="text-danger"></span>

            </div>*@

            <div class="form-group">
                <label asp-for="MeetingCategories" class="control-label"></label>
                <select asp-for="MeetingCategoryId" asp-items="@(new SelectList(Model.MeetingCategories,"Id","Name"))" class="form-control"></select>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>


            <input type="submit" value="Edit" class="btn btn-primary" />
        </form>
    </div>
</div>


